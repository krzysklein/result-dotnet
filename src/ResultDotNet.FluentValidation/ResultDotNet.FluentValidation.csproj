<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>KrzysKlein.$(AssemblyName)</PackageId>
		<Version>0.1.0</Version>
		<Title>Result Pattern in .NET</Title>
		<Authors>krzys.klein</Authors>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageProjectUrl>https://github.com/krzysklein/result-dotnet</PackageProjectUrl>
		<Description>Implementation of a Result Pattern - FluentValidation Extensions</Description>
		<RepositoryUrl>https://github.com/krzysklein/result-dotnet</RepositoryUrl>
		<PackageTags>result funtional railroad fluentvalidation</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FluentValidation" Version="12.1.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ResultDotNet\ResultDotNet.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	
</Project>
